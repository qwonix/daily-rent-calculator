<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.qwonix.cutesuite.calculator.Controller">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="15.0">
        <HBox>
            <VBox alignment="CENTER" spacing="7.0">
                <HBox alignment="CENTER" spacing="5.0">
                    <Label alignment="CENTER" contentDisplay="BOTTOM" minWidth="70.0" text="Будних" />
                    <Spinner fx:id="weekdaysSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="0" />
                        </valueFactory>
                    </Spinner>
                    <Label alignment="CENTER" text="×" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Spinner fx:id="weekdaysPercentSP" disable="true" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label alignment="CENTER" minWidth="70.0" text="Выходных" />
                    <Spinner fx:id="weekendsSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="0" />
                        </valueFactory>
                    </Spinner>
                    <Label alignment="CENTER" text="×" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Spinner fx:id="weekendsPercentSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label alignment="CENTER" minWidth="70.0" text="Праздников" />
                    <Spinner fx:id="holidaysSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="0" />
                        </valueFactory>
                    </Spinner>
                    <Label alignment="BOTTOM_CENTER" text="×">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Spinner fx:id="holidaysPercentSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" spacing="3.0" HBox.hgrow="ALWAYS">
                <Label text="Недельная скидка %" />
                <Spinner fx:id="weeklyDiscountSP" editable="true" onMouseClicked="#onWeeklyDiscountValueChanged" prefHeight="22.0" prefWidth="55.0">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="0" />
                    </valueFactory>
                </Spinner>
                <VBox.margin>
                    <Insets left="20.0" />
                </VBox.margin>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </VBox>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>

        <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="20.0" vgap="15.0">
            <fx:define>
                <ToggleGroup fx:id="peopleCountSP" />
            </fx:define>
            <VBox>
                <RadioButton onAction="#onSelectedPeopleCountChange" text="1 человек" userData="1">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                    <toggleGroup>
                        <ToggleGroup fx:id="peopleCountSP" />
                    </toggleGroup>

                </RadioButton>
                <VBox alignment="CENTER" spacing="3.0">
                    <Spinner fx:id="percentPerOnePersonSP" editable="true" onMouseClicked="#onPercentPerOneChanged" prefHeight="22.0" prefWidth="55.0" userData="1">

                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerOnePersonSP" editable="true" onMouseClicked="#onCostPerOnePersonChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="0" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
            <VBox>
                <RadioButton onAction="#onSelectedPeopleCountChange" selected="true" text="2 человека" toggleGroup="$peopleCountSP" userData="2">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </RadioButton>
                <VBox alignment="CENTER" layoutX="10.0" layoutY="25.0" spacing="3.0">
                    <Spinner fx:id="percentPerTwoPersonSP" disable="true" editable="true" onMouseClicked="#onPercentPerTwoChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerTwoPersonSP" editable="true" onMouseClicked="#onCostPerTwoPersonsChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="1000" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
            <VBox>
                <RadioButton onAction="#onSelectedPeopleCountChange" text="3 человека" toggleGroup="$peopleCountSP" userData="3">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </RadioButton>
                <VBox alignment="CENTER" spacing="3.0">
                    <Spinner fx:id="percentPerThreePersonSP" editable="true" onMouseClicked="#onPercentPerThreeChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerThreePersonSP" editable="true" onMouseClicked="#onCostPerThreePersonsChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="1200" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
            <VBox>
                <RadioButton onAction="#onSelectedPeopleCountChange" text="4 человека" toggleGroup="$peopleCountSP" userData="4">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </RadioButton>
                <VBox alignment="CENTER" spacing="3.0">
                    <Spinner fx:id="percentPerFourPersonSP" editable="true" onMouseClicked="#onPercentPerFourChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="999" min="-999" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerFourPersonSP" editable="true" onMouseClicked="#onCostPerFourPersonsChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="1400" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
        </FlowPane>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
    <ListView fx:id="listView" prefHeight="190.0" prefWidth="230.0" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
        </HBox.margin>
    </ListView>

</HBox>
