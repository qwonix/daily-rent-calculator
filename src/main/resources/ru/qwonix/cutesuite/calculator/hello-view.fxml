<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.qwonix.cutesuite.calculator.Controller">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="361.0" spacing="15.0">
        <HBox alignment="CENTER" spacing="10.0">
            <Group>
                <VBox spacing="15.0">
                    <Label text="Будних" />
                    <Label text="Выходных" />
                    <Label text="Праздников" />
                </VBox>
            </Group>

            <VBox alignment="TOP_RIGHT" spacing="4.0">
                <HBox spacing="5.0">
                    <Spinner fx:id="weekdaysSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="45.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="5" max="100" min="0" />
                        </valueFactory>
                    </Spinner>
                    <Label text="x" />
                    <Spinner fx:id="weekdaysPercentSP" disable="true" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                </HBox>
                <HBox spacing="5.0">
                    <Spinner fx:id="weekendsSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="45.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="100" min="0" />
                        </valueFactory>
                    </Spinner>
                    <Label text="x" textAlignment="CENTER" />
                    <Spinner fx:id="weekendsPercentSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="20" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                </HBox>
                <HBox spacing="5.0">
                    <Spinner fx:id="holidaysSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="45.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="100" min="0" />
                        </valueFactory>
                    </Spinner>
                    <Label text="x" />
                    <Spinner fx:id="holidaysPercentSP" editable="true" onMouseClicked="#onDailyValueChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="20" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                </HBox>
            </VBox>
            <VBox>
                <Label text="Недельная скидка" />
                <Spinner fx:id="weeklyDiscountSP" editable="true" onMouseClicked="#onWeeklyDiscountValueChanged" prefHeight="22.0" prefWidth="55.0">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="7" max="100" min="0" />
                    </valueFactory>
                </Spinner>

            </VBox>
        </HBox>


        <HBox alignment="TOP_CENTER" spacing="10.0">
            <fx:define>
                <ToggleGroup fx:id="peopleCountSP" />
            </fx:define>
            <VBox>
                <RadioButton onAction="#onSelectFourPeople" text="1 человек" userData="1">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                    <toggleGroup>
                        <ToggleGroup fx:id="peopleCountSP" />
                    </toggleGroup>

                </RadioButton>
                <VBox alignment="CENTER">
                    <Spinner fx:id="percentPerOnePersonSP" editable="true" onMouseClicked="#onPercentPerOneChanged" prefHeight="22.0" prefWidth="55.0" userData="1">

                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="-10" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerOnePersonSP" editable="true" onMouseClicked="#onCostPerOneChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="900" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
            <VBox>
                <RadioButton onAction="#onSelectFourPeople" selected="true" text="2 человека" toggleGroup="$peopleCountSP" userData="2">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </RadioButton>
                <VBox alignment="CENTER" layoutX="10.0" layoutY="25.0">
                    <Spinner fx:id="percentPerTwoPersonSP" disable="true" editable="true" onMouseClicked="#onPercentPerTwoChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerTwoPersonSP" editable="true" onMouseClicked="#onCostPerTwoChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="1000" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
            <VBox>
                <RadioButton onAction="#onSelectFourPeople" text="3 человека" toggleGroup="$peopleCountSP" userData="3">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </RadioButton>
                <VBox alignment="CENTER">
                    <Spinner fx:id="percentPerThreePersonSP" editable="true" onMouseClicked="#onPercentPerThreeChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="20" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerThreePersonSP" editable="true" onMouseClicked="#onCostPerThreeChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="1200" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
            <VBox>
                <RadioButton onAction="#onSelectFourPeople" text="4 человека" toggleGroup="$peopleCountSP" userData="4">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </RadioButton>
                <VBox alignment="CENTER">
                    <Spinner fx:id="percentPerFourPersonSP" editable="true" onMouseClicked="#onPercentPerFourChanged" prefHeight="22.0" prefWidth="55.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="40" max="100" min="-100" />
                        </valueFactory>
                    </Spinner>
                    <Spinner fx:id="costPerFourPersonSP" editable="true" onMouseClicked="#onCostPerFourChanged" prefHeight="22.0" prefWidth="70.0">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="100" initialValue="1400" max="100000" min="0" />
                        </valueFactory>
                    </Spinner>
                </VBox>
            </VBox>
        </HBox>

    </VBox>
    <ListView fx:id="listView" layoutX="386.0" prefHeight="200.0" prefWidth="200.0" />
</AnchorPane>
